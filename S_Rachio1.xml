<scpd
    xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>ServiceCheck</name>
            <dataType>ui4</dataType>
            <defaultValue>1</defaultValue>
            <shortCode>serviceCheck</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>Message</name>
            <dataType>string</dataType>
            <defaultValue></defaultValue>
            <shortCode>message</shortCode>
        </stateVariable>
        <stateVariable sendEvents="no">
            <name>LastUpdate</name>
            <dataType>ui4</dataType>
            <defaultValue></defaultValue>
            <shortCode>lastupdate</shortCode>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>HideZones</name>
            <dataType>boolean</dataType>
            <defaultValue>0</defaultValue>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>HideSchedules</name>
            <dataType>boolean</dataType>
            <defaultValue>0</defaultValue>
        </stateVariable>
    </serviceStateTable>
    <actionList>
        <action>
            <name>SetAPIKey</name>
            <argumentList>
                <argument>
                    <name>newAPIKey</name>
                    <direction>in</direction>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>GetAPIKey</name>
            <argumentList>
                <argument>
                    <name>APIKey</name>
                    <relatedStateVariable>APIKey</relatedStateVariable>
                    <direction>out</direction>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetHideZones</name>
            <argumentList>
                <argument>
                    <name>newHideValue</name>
                    <direction>in</direction>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetHideSchedules</name>
            <argumentList>
                <argument>
                    <name>newHideValue</name>
                    <direction>in</direction>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>ServiceReset</name>
            <argumentList>
            </argumentList>
        </action>
        <action>
            <name>Test</name>
            <argumentList>
            </argumentList>
        </action>
    </actionList>
</scpd>
